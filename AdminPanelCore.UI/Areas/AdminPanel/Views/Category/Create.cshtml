@model AdminPanelCore.ENTITIES.Concrete.Category

@{
    ViewBag.Title = "Kategori Ekle";
}

@using (Html.BeginForm())   
{
    @Html.AntiForgeryToken()
    <div class="container-fluid mb-60">
        <div class="icerik">
            <h3 class="sayfaBasligi"><i class="fa fa-plus-circle"></i>&nbsp;Kategori Ekle  </h3>
            <hr class="sayfaBasligi_hr"/>
            <p class="text-danger">@Html.ValidationMessage("CategoryException")</p>
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-3">Kategori / Alt Kategori</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", placeholder = "Kategori" } })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.SubCategoryID, new SelectList(ViewBag.SubCategory, "Id", "CategoryName"), "Alt Kategori Tipi Seçiniz", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SubCategoryID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryTypeID, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.DropDownList("CategoryTypeID", new SelectList(ViewBag.CategoryTypes, "Id", "CategoryTypeName"), "Kategori Tipi Seçiniz", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryTypeID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SeoLink, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.SeoLink, new { htmlAttributes = new { @class = "form-control", placeholder = "Seo Link Giriniz !" } })
                        @Html.ValidationMessageFor(model => model.SeoLink, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Title Giriniz !" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.MetaDescription, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.MetaDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "Meta Description Giriniz !" } })
                        @Html.ValidationMessageFor(model => model.MetaDescription, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.MetaKeywords, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.MetaKeywords, new { htmlAttributes = new { @class = "form-control", placeholder = "Meta Keywords Giriniz !" } })
                        @Html.ValidationMessageFor(model => model.MetaKeywords, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-6">
                        <input type="submit" value="Kategori Ekle" class="btn btn-dark" />
                        @Html.ActionLink("Kategori Listesine Git", "Index", null, new { @class = "btn btn-dark" })
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Areas/Admin/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Areas/Admin/Scripts/jquery.validate.min.js"></script>
<script src="~/Areas/Admin/Scripts/jquery.validate.unobtrusive.min.js"></script>
