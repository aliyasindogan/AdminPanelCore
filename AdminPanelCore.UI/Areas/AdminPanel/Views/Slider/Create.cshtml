@model AdminPanelCore.ENTITIES.Concrete.Slider

@{
    ViewBag.Title = "Slider Ekle ";
}

@using (Html.BeginForm("Create", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid mb-60">
        <div class="icerik">
            <h3 class="sayfaBasligi"><i class="fa fa-plus-circle"></i>&nbsp;Slider Ekle  </h3>
            <hr class="sayfaBasligi_hr" />
            <p class="text-danger">@Html.ValidationMessage("CategoryException")</p>
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="control-label col-md-3">Slider Resim (850x400px)</label>
                    <div class="col-md-8">
                        <input type="file" id="Foto" name="Foto" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SliderTitle, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.SliderTitle, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SliderTitle, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SliderDescription, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.SliderDescription, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SliderDescription, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SliderNewsUrl, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.SliderNewsUrl, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SliderNewsUrl, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsDisplay, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        <div class="checkbox">
                            @Html.CheckBoxFor(model => model.IsDisplay, new { @checked = "checked" })
                            @Html.ValidationMessageFor(model => model.IsDisplay, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-6">
                        <input type="submit" value="Slider Ekle" class="btn btn-dark" />
                        @Html.ActionLink("Slider Listesine Git", "Index", null, new { @class = "btn btn-dark" })
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<script src="~/Areas/Admin/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Areas/Admin/Scripts/jquery.validate.min.js"></script>
<script src="~/Areas/Admin/Scripts/jquery.validate.unobtrusive.min.js"></script>