@model IEnumerable<AdminPanelCore.ENTITIES.Concrete.Slider>

@{
    ViewBag.Title = "Slider Listesi ";
}
<style type="text/css">
    .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
        padding: 8px;
        line-height: 1.42857143;
        vertical-align: middle;
        text-align: center;
        border-top: 1px solid #ddd;
    }
</style>
<div class="container-fluid mb-60">
    <div class="icerik">
        <h3 class="sayfaBasligi"><i class="fa fa-list-ul"></i>&nbsp;Slider Listesi  </h3>
        <div class="pull-right right-button">
            <a href="@Url.Action("Create","Slider")" class="btn btn-dark"><i class="fa fa-plus"></i>&nbsp;Slider Ekle</a>
        </div>
        <table class="table table-bordered table-hover table-condensed">
            <tr>
                <th>
                    <label>Resim</label>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SliderTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SliderDescription)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.SliderNewsUrl)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.DisplayOrder)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.IsDisplay)
                </th>

                <th>İşlemler</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="m-0">
                        <img src="@item.SliderImageUrlLarge" alt="@item.SliderTitle" width="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SliderTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SliderDescription)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.SliderNewsUrl)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayOrder)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>*@
                    <td>
                        @if (item.IsDisplay)
                        {
                            <span class="label label-success"><i class="fa fa-check-circle" aria-hidden="true"></i></span>
                        }
                        else
                        {
                            <span class="label label-danger"><i class="fa fa-times-circle" aria-hidden="true"></i></span>
                        }
                    </td>

                    <td>
                        @Html.ActionLink("Düzelt", "Edit", new { id = item.Id }, new { @class = "btn btn-dark btn-xs" })
                        @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-dark btn-xs" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-dark btn-xs" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>